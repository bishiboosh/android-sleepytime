<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="fill_parent"
	android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
	android:foregroundGravity="center">
	<RelativeLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:gravity="center">
		<TextView android:id="@+id/title_results" android:text="@string/app_name_2_lines"
			android:layout_alignParentTop="true" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textSize="30dip"
			android:gravity="center" android:layout_marginBottom="10dip"
			android:layout_alignParentLeft="true"
			android:layout_alignParentRight="true" />
		<TextView android:layout_below="@id/title_results"
			android:id="@+id/text1_results" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textSize="20dip"
			android:gravity="center" android:layout_alignLeft="@id/title_results"
			android:layout_alignRight="@id/title_results" />
		<TextView android:id="@+id/text2_results"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textSize="20dip" android:layout_alignLeft="@id/title_results"
			android:layout_alignRight="@id/title_results" android:layout_below="@id/text1_results"
			android:gravity="center" android:layout_marginBottom="5dip" android:textStyle="bold|italic"/>
		<TextView android:id="@+id/text3_results"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:textSize="20dip" android:layout_alignLeft="@id/title_results"
			android:layout_alignRight="@id/title_results" android:layout_below="@id/text2_results"
			android:gravity="center" />
	</RelativeLayout>
</ScrollView>