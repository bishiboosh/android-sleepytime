<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent"
	android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
	android:gravity="center">
	<TextView android:id="@+id/title" android:text="@string/app_name"
		android:layout_alignParentTop="true" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:textSize="20dip"
		android:gravity="center" android:layout_marginBottom="10dip"
		android:layout_alignParentLeft="true" android:layout_alignParentRight="true" />
	<TextView android:layout_below="@id/title" android:id="@+id/text1"
		android:text="@string/wake_up" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:textSize="15dip"
		android:gravity="center" android:layout_alignParentLeft="true"
		android:layout_alignParentRight="true" />
	<LinearLayout android:id="@+id/spinners"
		android:layout_below="@+id/text1" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:gravity="center"
		android:orientation="horizontal" android:layout_alignParentLeft="true"
		android:layout_alignParentRight="true">
		<Spinner android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/hour"
			android:prompt="@string/hour" android:gravity="center" />
		<Spinner android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/minute"
			android:gravity="center" android:prompt="@string/minute" />
		<Spinner android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/ampm"
			android:gravity="center" android:entries="@array/ampm" />
	</LinearLayout>
	<TextView android:layout_below="@id/spinners" android:id="@+id/text2"
		android:text="@string/bed_now" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:textSize="15dip"
		android:gravity="center" android:layout_alignParentLeft="true"
		android:layout_alignParentRight="true" />
	<Button android:layout_below="@+id/text2" android:layout_width="wrap_content"
		android:text="@string/zzz" android:layout_height="wrap_content"
		android:id="@+id/zzz" android:layout_centerInParent="true" />
</RelativeLayout>