<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent"
	android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
	android:gravity="center">
	<TextView android:id="@+id/title" android:text="@string/app_name_2_lines"
		android:layout_alignParentTop="true" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:textSize="30dip"
		android:gravity="center" android:layout_marginBottom="10dip"
		android:layout_alignParentLeft="true" android:layout_alignParentRight="true" />
	<Button android:id="@+id/choose_time" android:layout_width="wrap_content"
		android:text="@string/choose_time" android:layout_below="@+id/title"
		android:layout_height="wrap_content" android:layout_centerInParent="true"
		android:textSize="20dip" android:layout_marginBottom="20dip"/>
	<Button android:layout_below="@+id/choose_time" android:layout_width="wrap_content"
		android:text="@string/zzz" android:layout_height="wrap_content"
		android:id="@+id/zzz" android:layout_centerInParent="true"
		android:textSize="20dip" />
</RelativeLayout>