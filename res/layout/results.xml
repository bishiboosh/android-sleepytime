<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent"
	android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
	android:gravity="center">
	<TextView android:id="@+id/title_results" android:text="@string/app_name"
		android:layout_alignParentTop="true" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:textSize="20dip"
		android:gravity="center" android:layout_marginBottom="10dip"
		android:layout_alignParentLeft="true" android:layout_alignParentRight="true" />
	<TextView android:layout_below="@id/title_results" android:id="@+id/text1_results"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:textSize="15dip" android:gravity="center"
		android:layout_alignParentLeft="true" android:layout_alignParentRight="true"
		/>
	<ScrollView android:layout_height="wrap_content"
		android:layout_width="wrap_content" android:layout_below="@+id/text1_results"
		android:layout_alignParentLeft="true" android:layout_alignParentRight="true"
		android:foregroundGravity="center" android:fillViewport="true">
		<RelativeLayout android:layout_width="fill_parent"
			android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
			android:gravity="center">
			<TextView android:id="@+id/text2_results"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:textSize="15dip"
				android:layout_alignParentLeft="true"
				android:layout_alignParentRight="true"
				android:layout_alignParentTop="true" android:gravity="center"
				android:layout_marginBottom="5dip" />
			<TextView android:id="@+id/text3_results"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:textSize="15dip"
				android:layout_alignParentLeft="true"
				android:layout_alignParentRight="true" android:layout_below="@id/text2_results"
				android:gravity="center" />
		</RelativeLayout>
	</ScrollView>
</RelativeLayout>